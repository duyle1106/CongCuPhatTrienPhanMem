@model  PagedList.IPagedList<Model.EF.Order>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Order
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Index", "Order", FormMethod.Get))
        {

            <div class="row ">
                <div class="card shadow mb-4" class="card-header py-2">
                    <div class="col-lg-12">
                        <div class="input-group" class="row form-control bg-light border-0 d-lg-block">
                            <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control" />
                            <div class="mb-md-1 ">
                                <button type="submit" class="btn btn-info ">Tìm Kiếm</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


        <div class="table-primary">

            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Điện thoại</th>
                 

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID">
                            <td>@item.ShipName</td>
                            <td>@item.ShipEmail </td>
                            <td>@item.ShipAddress</td>
                            <td>@item.ShipPet</td>
 




                        </tr>
                    }
                </tbody>
            </table>

        </div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @seacrhString = @ViewBag.SearchString }))
    </div>
</div>

        </div>
<!-- /.container-fluid -->
    </div>
    </div>
    </div>

